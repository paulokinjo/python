pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub-cred-paulo')
	}

	stages {

		stage('Build') {

			steps {
        script {
          gitTag = $(git log --format="%H" -n 1)
        }
				// sh 'docker build -t paulokinjo/python-superlist: .'
        sh "git tag ${env.BUILD_NUMBER}-${gitTag}"
			}
		}

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				// sh 'docker push paulokinjo/nodeapp:latest'
        echo 'Pushing'
			}
		}
	}

	post {
		always {
			sh 'docker logout'
		}
	}

}