pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub-cred-paulo')
    commit = sh(returnStdout: true, script: 'git log --format="%H" -n 1')
	}

	stages {
		stage('Build') {
			steps {
        echo '${env.BUILD_NUMBER}-${commit}'
				sh "docker build -t paulokinjo/python-superlist:${env.BUILD_NUMBER}-${commit} .'        
			}
		}

		stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {
			steps {
				sh 'docker push paulokinjo/python-superlist:${env.BUILD_NUMBER}-${env.commit}'
			}
		}
	}

	post {
		always {
			sh 'docker logout'
		}
	}

}